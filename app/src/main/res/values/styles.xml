<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance">
        <item name="android:textColor">
            @color/colorTitle
        </item>
        <item name="android:text">
            ""
        </item>
    </style>

    <style name="CustomStyle.DarkTheme" parent="Theme.AppCompat">

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorAccent">@color/amber</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--color of thumb when inactive-->
        <item name="colorSwitchThumbNormal">@color/grey300</item>
        <!--Inactive track color-->
        <item name="android:colorForeground">@color/grey600</item>
    </style>
</resources>
